<Ui xmlns="http://www.blizzard.com/wow/ui/"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Frame name="playerFrameTemplate" inherits="BackdropTemplate" virtual="true">
        <Size y="26"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentPlayerName" parentkey="name" inherits="GameTooltipText">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent">
                            <Offset x="10" y="0"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="ARTWORK">
                <Texture name="$parentPlayerClassIcon" parentKey="playerClassIcon">
                    <Size x="20" y="20"/>
    	            <Anchors>
                        <Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="$parent">
                            <Offset x="-5" y="0"/>
                        </Anchor>
	                </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture name="$parentPlayerRaceIcon" parentKey="playerRaceIcon">
                    <Size x="20" y="20"/>
    	            <Anchors>
                        <Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentPlayerClassIcon"/>
	                </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad inherit="prepend">
                print("Loaded!");
                self:SetBackdrop({
                bgFile = "Interface\\Buttons\\WHITE8X8",
                tile = true,
                tileSize = 32,
            });
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>