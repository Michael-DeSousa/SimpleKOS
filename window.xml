<Ui xmlns="http://www.blizzard.com/wow/ui/"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <!-- KOS Scroll Frames have a large empty space on the left side of the window. This allows you to parent/anchor the KOSEditBox to the left of any KOSplayerFrame in the main window while keeping it visible -->
    <ScrollFrame name="KOSScrollFrameTemplate" inherits="UIPanelScrollFrameTemplate" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent">
                <Offset x="-175"/>
            </Anchor>
            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent"/>
        </Anchors>
    </ScrollFrame>
    <Frame name="KOSScrollFrameChildTemplate" virtual="true">
        <Size x="240" y="600" />
    </Frame>
    <Frame name="KOSWindowTemplate" enableMouse="true" movable="true" resizable="true" clampedToScreen="true" inherits="BackdropTemplate" virtual="true">
        <Size x="180" y="132" />
        <ResizeBounds>
            <minResize x="150" y="80"/>
            <maxResize x="480" y="530"/>
        </ResizeBounds>
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$parent"/>
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" parentkey="Title" enablemouse="true" inherits="Tooltip_Med">                    
                    <Anchors>
                        <Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$parent">
                            <Offset x="0" y="4"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" relativeTo="$parent">
                        <Offset x="5" y="-2"/>
                    </Anchor>
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad inherit="prepend" function="KOSWindow_OnLoad"/>
            <OnMouseDown function="KOSWindow_OnMouseDown"/>
            <OnMouseUp function="KOSWindow_OnMouseUp"/>
        </Scripts>
    </Frame>
    <Button name="KOSResizeButtonTemplate" frameStrata="HIGH" virtual="true">
        <Size x="16" y="16"/> 
        <Anchors>
            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent"/>
        </Anchors>
        <NormalTexture name="$parentNormalTexture" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Up"/>
        <HighlightTexture name="$parentHighlightTexture" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Highlight"/>
        <PushedTexture name="$parentPushedTexture" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Down"/>
        <Scripts>
            <OnMouseDown function="KOSResizeButton_OnMouseDown"/>
            <OnMouseUp function="KOSResizeButton_OnMouseUp"/>
        </Scripts>
    </Button>
    <Editbox name="KOSEditBoxTemplate" multiLine="false" letters="80" inherits="InputScrollFrameTemplate" virtual="true">
        <Size x="160" y="16"/>
        <Anchors>
            <Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parent">
                <Offset x="-8" y="0"/>
            </Anchor>
        </Anchors>
        <FontString inherits="ChatFontNormal"/>
        <Scripts>
            <OnEnterPressed function="KOSEditBox_OnEnterPressed"/>
        </Scripts>
    </Editbox>

    <!-- Recent Attacker windows have no need for an editbox so there is no large empty space on the side-->
    <ScrollFrame name="RAScrollFrameTemplate" inherits="UIPanelScrollFrameTemplate" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent"/>
            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent"/>
        </Anchors>
    </ScrollFrame>
    <Frame name="RAScrollFrameChildTemplate" virtual="true">
        <Size x="180" y="600" />
    </Frame>
    <Frame name="RAWindowTemplate" enableMouse="true" movable="true" resizable="true" clampedToScreen="true" inherits="BackdropTemplate" virtual="true">
        <Size x="180" y="132" />
        <ResizeBounds>
            <minResize x="150" y="80"/>
            <maxResize x="480" y="530"/>
        </ResizeBounds>
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER" relativeTo="$parent"/>
        </Anchors>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" relativeTo="$parent">
                        <Offset x="5" y="-2"/>
                    </Anchor>
                </Anchors>
            </Button>
        </Frames>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" parentkey="Title" enablemouse="true" inherits="Tooltip_Med">                    
                    <Anchors>
                        <Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$parent">
                            <Offset x="0" y="4"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad inherit="prepend" function="RAWindow_OnLoad"/>
            <OnMouseDown function="RAWindow_OnMouseDown"/>
            <OnMouseUp function="RAWindow_OnMouseUp"/>
        </Scripts>
    </Frame>
</Ui>